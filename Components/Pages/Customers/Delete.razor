@page "/customers/delete/{id:int}"
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation

<PageTitle>Delete Customer</PageTitle>

<h1>Delete Customer</h1>

@if (customer is null)
{
    <p>Customer not found.</p>
}
else
{
    <h3>Are you sure you want to delete this customer?</h3>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@customer.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@customer.Email</dd>
    </dl>

    <button class="btn btn-danger" @onclick="DeleteCustomer">Delete</button>
    <a class="btn btn-secondary ms-2" href="/customers">Cancel</a>
}

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger mt-3">@error</div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Customer? customer;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        customer = await DbContext.Customers.FindAsync(Id);
    }

    private async Task DeleteCustomer()
    {
        if (customer is null)
        {
            return;
        }

        try
        {
            DbContext.Customers.Remove(customer);
            await DbContext.SaveChangesAsync();
            Navigation.NavigateTo("/customers");
        }
        catch (DbUpdateException)
        {
            error = "Customer cannot be deleted because related sales exist.";
        }
    }
}
