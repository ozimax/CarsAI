@page "/cars/edit/{id:int}"
@inject ICarService CarService
@inject NavigationManager Navigation

<PageTitle>Edit Car</PageTitle>

<h1>Edit Car</h1>

@if (car is null)
{
    <p>Car not found.</p>
}
else
{
    <EditForm Model="car" OnValidSubmit="UpdateCar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Make</label>
            <InputText class="form-control" @bind-Value="car.Make" />
        </div>

        <div class="mb-3">
            <label class="form-label">Model</label>
            <InputText class="form-control" @bind-Value="car.Model" />
        </div>

        <div class="mb-3">
            <label class="form-label">Year</label>
            <InputNumber class="form-control" @bind-Value="car.Year" />
        </div>

        <div class="mb-3">
            <label class="form-label">Driver Name</label>
            <InputText class="form-control" @bind-Value="car.DriverName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Plate Number</label>
            <InputText class="form-control" @bind-Value="car.PlateNumber" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/cars" class="btn btn-secondary ms-2">Cancel</a>
    </EditForm>
}

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger mt-3">@error</div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Car? car;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        car = await CarService.GetByIdAsync(Id);
    }

    private async Task UpdateCar()
    {
        if (car is null)
        {
            return;
        }

        var result = await CarService.UpdateAsync(car);
        if (!result.Success)
        {
            error = result.Error;
            return;
        }

        Navigation.NavigateTo("/cars");
    }
}
